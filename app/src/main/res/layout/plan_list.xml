<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@mipmap/plan_background"
    android:id="@+id/plan_list"
    >

    <RelativeLayout
        android:id="@+id/plan_hint"
        android:layout_width="match_parent"
        android:layout_height="60dp">
       <TextView
           android:id="@+id/plan_num"
           android:layout_width="80dp"
           android:layout_height="40dp"
           android:text="第一阶段"
           android:textSize="16dp"
           android:textStyle="bold"
           android:layout_marginTop="5dp"
           android:gravity="center">
       </TextView>

        <TextView
            android:id="@+id/plan_name"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="6dp"
            android:text="JAVA基础"
            ></TextView>

        <TextView
            android:id="@+id/plan_time"
            android:layout_width="240dp"
            android:layout_height="22dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="26dp"
            android:text="2019.11.7-2019.12.7"
            ></TextView>

        <TextView
            android:id="@+id/plan_state_name"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="未完成"
            android:textSize="10dp"
            android:layout_marginLeft="311dp"
            android:layout_marginTop="18dp"/>

        <ImageView
            android:id="@+id/plan_state"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="326dp"
            android:layout_marginTop="36dp"
            android:background="@mipmap/plan_incompleted"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/alarm"
            android:layout_weight="0"
            android:layout_marginLeft="300dp"
            android:src="@mipmap/alarm" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/plan_state"
        android:background="#000000" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="600dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/mainText"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:typeface="sans"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"/>

</LinearLayout>