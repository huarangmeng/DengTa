<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="我"
        android:textSize="25dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/dividing_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="#bfbfbf"
        />

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:background="@mipmap/head" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:text="大口吃肉"
        android:textSize="27dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/user_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="115dp"
        android:gravity="center"
        android:text="数计学院|计算机类"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/setup"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="155dp"
        android:backgroundTint="#4CAF50"
        android:gravity="center"
        android:text="set up"
        android:textColor="#FFFFFF"
        android:textSize="23dp" />


    <TextView
        android:id="@+id/adoption_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="220dp"
        android:text="5"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/adoption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="260dp"
        android:text="采纳"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dividing_line_2"
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="145dp"
        android:background="#bfbfbf" />

    <TextView
        android:id="@+id/collection_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="220dp"
        android:text="16"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="260dp"
        android:text="收藏"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dividing_line_3"
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="270dp"
        android:background="#bfbfbf" />

    <TextView
        android:id="@+id/like_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="220dp"
        android:text="16"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="313dp"
        android:layout_marginTop="260dp"
        android:text="点赞"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dividing_line_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="295dp"
        android:background="#bfbfbf" />

    <Button
        android:id="@+id/my_plan"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#88A789"
        android:gravity="center"
        android:text="我的计划 >\n\n2个"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/my_progress"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#88A789"
        android:gravity="center"
        android:text="完成进度 >\n\n30%"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/dividing_line_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="465dp"
        android:background="#bfbfbf" />

    <TextView
        android:id="@+id/my_colletion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="20dp"
        android:text="我的收藏"
        android:textSize="23dp"/>

    <TextView
        android:id="@+id/dividing_line_6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="503dp"
        android:background="#bfbfbf" />


    <TextView
        android:id="@+id/dividing_line_7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="660dp"
        android:background="#bfbfbf" />
    />

    <include
        layout="@layout/botton_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>