<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="40dp">
        <Button
            android:id="@+id/per_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/backward"
            android:onClick="returnUpload"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:text="编辑资料"
            android:textSize="15dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/dividing_line_1"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="   基本信息"
        android:gravity="center_vertical"
        android:textSize="14dp"
        android:background="#D5E2D5" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="  用户ID："
        android:textSize="18dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="xxxx/xx/xx"
        android:textColor="#D8585353"
        android:textSize="18dp" />
        />
</LinearLayout>

    <TextView
        android:id="@+id/dividing_line_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="  昵称："
            android:textSize="18dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="XXXXXXXXXXXXXXX"
            android:textColor="#D8585353"
            android:textSize="18dp" />
        />
    </LinearLayout>

    <TextView
        android:id="@+id/dividing_line_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="  姓名："
            android:textSize="18dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="XXXXXXXXXXXXXXX"
            android:textColor="#D8585353"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dividing_line_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="  性别："
            android:textSize="18dp"
            android:gravity="center_vertical"
            />

        <Spinner
            android:id="@+id/spin_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:entries="@array/sex"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/dividing_line_6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="  生日："
            android:textSize="18dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/use_birthday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="XXXXXXXXXXXXXXX"
            android:textColor="#D8585353"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dividing_line_7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="  年龄："
            android:textSize="18dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/use_age"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="XXXXXXXXXXXXXXX"
            android:textColor="#D8585353"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dividing_line_8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="  身份："
            android:textSize="18dp"
            android:gravity="center_vertical"
            />

        <Spinner
            android:id="@+id/spin_idendity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:entries="@array/idendity"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/dividing_line_9"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="   专业方向"
        android:gravity="center_vertical"
        android:textSize="14dp"
        android:background="#D5E2D5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="  所在学院："
            android:textSize="18dp"
            android:gravity="center_vertical"
            />

        <Spinner
            android:id="@+id/spin_college"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:entries="@array/college"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/dividing_line_10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="  所在专业："
            android:textSize="18dp"
            android:gravity="center_vertical"
            />

        <Spinner
            android:id="@+id/spin_major"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:entries="@array/major"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/dividing_line_11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="  所在方向："
            android:textSize="18dp"
            android:gravity="center_vertical"
            />

        <Spinner
            android:id="@+id/spin_direction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:entries="@array/direction"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/dividing_line_12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E5E5" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="bottom">
        <Button
            android:id="@+id/save_changes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="保存修改"
            android:textSize="23dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="#4CAF50"/>
    </LinearLayout>

</LinearLayout>